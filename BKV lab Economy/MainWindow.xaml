<Window x:Class="BKV_lab_Economy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BKV_lab_Economy"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Мастер экономии" 
        Height="650" Width="1200">
    
    <Grid>

        <Border Style="{StaticResource MainBorder}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Label Content="Добрый день! На скольких вещах будем экономить?" />

                <TextBox Text="{Binding EconomyCount}" 
                         Margin="0,20,0,0"/>

                <Button Content="Начать!"
                        Click="Button_OpenSoManyWindowsToStartEconomy"/>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
